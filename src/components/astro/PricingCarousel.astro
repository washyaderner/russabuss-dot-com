---
// PricingCarousel component for russabuss.com homepage
// Displays 4 license tiers: MP3, WAV, Stems, Exclusive
// All tiers visible simultaneously (grid layout, not carousel scroll)

interface PricingTier {
  name: string;
  price: string;
  format: string;
  features: string[];
  highlight?: boolean;
}

const tiers: PricingTier[] = [
  {
    name: 'MP3 Lease',
    price: '$50',
    format: 'MP3 320kbps',
    features: [
      'Untagged MP3 file',
      'Distribute up to 5,000 units',
      'Up to 500,000 streams',
      'Non-exclusive license',
      'Music videos allowed',
    ],
  },
  {
    name: 'WAV Lease',
    price: '$80',
    format: 'WAV 24-bit',
    features: [
      'Untagged WAV file',
      'Distribute up to 10,000 units',
      'Up to 1,000,000 streams',
      'Non-exclusive license',
      'Music videos allowed',
      'Radio broadcasting rights',
    ],
    highlight: true,
  },
  {
    name: 'Trackouts',
    price: '$249',
    format: 'Stems + WAV',
    features: [
      'All individual track stems',
      'Mixed WAV master',
      'Unlimited distribution',
      'Unlimited streams',
      'Non-exclusive license',
      'Full commercial use',
    ],
  },
  {
    name: 'Exclusive',
    price: '$2,000+',
    format: 'Full Ownership',
    features: [
      'All stems and project files',
      'Beat removed from store',
      'Unlimited everything',
      'Full exclusive rights',
      'Copyright transfer',
      'Custom pricing available',
    ],
  },
];
---

<section class="pricing" aria-labelledby="pricing-heading">
  <div class="pricing-container">
    <div class="pricing-header">
      <h2 id="pricing-heading" class="pricing-title">Simple, Transparent Pricing</h2>
      <p class="pricing-subtitle">Choose the license that fits your project</p>
    </div>
    <div class="pricing-grid">
      {tiers.map((tier) => (
        <article class={`pricing-card ${tier.highlight ? 'pricing-card--highlight' : ''}`}>
          {tier.highlight && <span class="pricing-badge">Most Popular</span>}
          <div class="pricing-card-header">
            <h3 class="tier-name">{tier.name}</h3>
            <p class="tier-price">{tier.price}</p>
            <p class="tier-format">{tier.format}</p>
          </div>
          <ul class="tier-features">
            {tier.features.map((feature) => (
              <li class="tier-feature">
                <svg class="feature-check" width="16" height="16" viewBox="0 0 16 16" fill="none" aria-hidden="true">
                  <path d="M13.5 4.5L6 12L2.5 8.5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
                {feature}
              </li>
            ))}
          </ul>
          <button class="tier-cta" type="button">
            View License
          </button>
        </article>
      ))}
    </div>
  </div>
</section>

<style>
  .pricing {
    background: var(--gradient-futuristic, linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%));
    padding: var(--space-20, 5rem) var(--space-4, 1rem);
    position: relative;
  }

  /* Dark overlay for text contrast */
  .pricing::before {
    content: '';
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.6);
    pointer-events: none;
  }

  .pricing-container {
    position: relative;
    max-width: var(--container-xl, 1280px);
    margin: 0 auto;
    z-index: 1;
  }

  .pricing-header {
    text-align: center;
    margin-bottom: var(--space-12, 3rem);
  }

  .pricing-title {
    font-family: var(--font-display, 'Space Grotesk', sans-serif);
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 700;
    color: var(--color-text-primary, #ffffff);
    margin: 0 0 var(--space-4, 1rem);
  }

  .pricing-subtitle {
    font-family: var(--font-body, 'Inter', sans-serif);
    font-size: var(--font-size-lg, 1.125rem);
    color: var(--color-text-secondary, #a0a0a0);
    margin: 0;
  }

  .pricing-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-6, 1.5rem);
  }

  .pricing-card {
    position: relative;
    background: var(--color-bg-primary, #0a0a0a);
    border-radius: var(--radius-xl, 1rem);
    padding: var(--space-8, 2rem);
    display: flex;
    flex-direction: column;
    transition: transform var(--transition-base, 250ms ease);
  }

  .pricing-card:hover {
    transform: translateY(-4px);
  }

  .pricing-card--highlight {
    border: 2px solid var(--color-accent, #6366f1);
    box-shadow: var(--shadow-glow, 0 0 20px rgb(99 102 241 / 0.3));
  }

  .pricing-badge {
    position: absolute;
    top: -12px;
    left: 50%;
    transform: translateX(-50%);
    background: var(--color-accent, #6366f1);
    color: var(--color-text-primary, #ffffff);
    font-family: var(--font-body, 'Inter', sans-serif);
    font-size: var(--font-size-xs, 0.75rem);
    font-weight: 600;
    padding: var(--space-1, 0.25rem) var(--space-4, 1rem);
    border-radius: var(--radius-full, 9999px);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .pricing-card-header {
    text-align: center;
    padding-bottom: var(--space-6, 1.5rem);
    border-bottom: 1px solid var(--color-bg-elevated, #1a1a1a);
    margin-bottom: var(--space-6, 1.5rem);
  }

  .tier-name {
    font-family: var(--font-display, 'Space Grotesk', sans-serif);
    font-size: var(--font-size-xl, 1.25rem);
    font-weight: 600;
    color: var(--color-text-primary, #ffffff);
    margin: 0 0 var(--space-2, 0.5rem);
  }

  .tier-price {
    font-family: var(--font-display, 'Space Grotesk', sans-serif);
    font-size: var(--font-size-4xl, 2.25rem);
    font-weight: 700;
    color: var(--color-text-primary, #ffffff);
    margin: 0 0 var(--space-1, 0.25rem);
  }

  .tier-format {
    font-family: var(--font-mono, 'JetBrains Mono', monospace);
    font-size: var(--font-size-sm, 0.875rem);
    color: var(--color-text-muted, #666666);
    margin: 0;
  }

  .tier-features {
    list-style: none;
    padding: 0;
    margin: 0 0 var(--space-8, 2rem);
    flex: 1;
  }

  .tier-feature {
    display: flex;
    align-items: flex-start;
    gap: var(--space-3, 0.75rem);
    font-family: var(--font-body, 'Inter', sans-serif);
    font-size: var(--font-size-sm, 0.875rem);
    color: var(--color-text-secondary, #a0a0a0);
    padding: var(--space-2, 0.5rem) 0;
  }

  .feature-check {
    flex-shrink: 0;
    color: var(--color-accent, #6366f1);
    margin-top: 2px;
  }

  .tier-cta {
    width: 100%;
    padding: var(--space-4, 1rem);
    font-family: var(--font-body, 'Inter', sans-serif);
    font-size: var(--font-size-base, 1rem);
    font-weight: 600;
    color: var(--color-text-primary, #ffffff);
    background: var(--color-bg-elevated, #1a1a1a);
    border: 1px solid var(--color-bg-slate, #1e1e1e);
    border-radius: var(--radius-md, 0.5rem);
    cursor: pointer;
    transition: all var(--transition-base, 250ms ease);
  }

  .tier-cta:hover,
  .tier-cta:focus {
    background: var(--color-accent, #6366f1);
    border-color: var(--color-accent, #6366f1);
  }

  .tier-cta:focus-visible {
    outline: 2px solid var(--color-accent, #6366f1);
    outline-offset: 2px;
  }

  @media (min-width: 640px) {
    .pricing-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .pricing-grid {
      grid-template-columns: repeat(4, 1fr);
    }

    .pricing-card {
      padding: var(--space-6, 1.5rem);
    }
  }
</style>
