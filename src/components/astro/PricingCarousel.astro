---
// PricingCarousel component for russabuss.com homepage
import { PricingTable } from '../react/PricingTable';

interface PricingTier {
  name: string;
  price: string;
  yearlyPrice?: string; // Optional for beats
  format?: string;
  features: string[];
  isPopular?: boolean;
  buttonText: string;
  href: string;
  description?: string;
  period?: string;
}

const tiers: PricingTier[] = [
  {
    name: 'MP3 Lease',
    price: '50',
    format: 'MP3 320kbps',
    features: [
      'Untagged MP3 file',
      'Distribute up to 5,000 units',
      'Up to 500,000 streams',
      'Non-exclusive license',
      'Music videos allowed',
    ],
    buttonText: 'Add to Cart',
    href: '/beats',
    description: 'Perfect for demos and emerging artists',
    period: 'per license'
  },
  {
    name: 'WAV Lease',
    price: '80',
    format: 'WAV 24-bit',
    features: [
      'Untagged WAV file',
      'Distribute up to 10,000 units',
      'Up to 1,000,000 streams',
      'Non-exclusive license',
      'Music videos allowed',
      'Radio broadcasting rights',
    ],
    isPopular: true,
    buttonText: 'Add to Cart',
    href: '/beats',
    description: 'Industry standard quality for release',
    period: 'per license'
  },
  {
    name: 'Trackouts',
    price: '249',
    format: 'Stems + WAV',
    features: [
      'All individual track stems',
      'Mixed WAV master',
      'Unlimited distribution',
      'Unlimited streams',
      'Non-exclusive license',
      'Full commercial use',
    ],
    buttonText: 'Add to Cart',
    href: '/beats',
    description: 'Maximum control for professional mixing',
    period: 'per license'
  },
  {
    name: 'Exclusive',
    price: '2,000+',
    format: 'Full Ownership',
    features: [
      'All stems and project files',
      'Beat removed from store',
      'Unlimited everything',
      'Full exclusive rights',
      'Copyright transfer',
      'Custom pricing available',
    ],
    buttonText: 'Contact for Price',
    href: '/contact',
    description: 'Own the beat 100% exclusively',
    period: 'one-time fee'
  },
];
---

<section class="pricing-section">
  <PricingTable 
    client:visible 
    plans={tiers} 
    title="Simple, Transparent Pricing"
    description="Choose the license that fits your project"
    showToggle={false}
  />
</section>

<style>
  .pricing-section {
    position: relative;
    /* Use the darker futuristic gradient */
    background: var(--gradient-futuristic, linear-gradient(135deg, #3b3d8c 0%, #4a2865 50%, #6b3a6b 100%));
    padding: var(--space-20, 5rem) var(--space-4, 1rem);
  }
  
  /* Overlay for contrast */
  .pricing-section::before {
    content: '';
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.4);
    pointer-events: none;
  }
</style>
