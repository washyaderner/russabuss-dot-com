---
// ContactSection component for russabuss.com homepage
// "Your Dreams in ASMR" intro copy with React contact form
import ContactForm from '../react/ContactForm.jsx';
---

<section class="contact" aria-labelledby="contact-heading">
  <div class="contact-container">
    <div class="contact-header">
      <h2 id="contact-heading" class="contact-title">Your Dreams in ASMR</h2>
      <p class="contact-intro">
        Send me a message using the form below. Whether you need beats, mixing, mastering, or just want to chat about your projectâ€”I'm here to help bring your vision to life.
      </p>
    </div>

    <div class="contact-content">
      <div class="contact-form-wrapper">
        <ContactForm client:visible />
      </div>

      <div class="contact-info">
        <div class="info-block">
          <h3 class="info-title">Direct Contact</h3>
          <ul class="info-list">
            <li>
              <a href="mailto:audio@russabuss.com" class="info-link">audio@russabuss.com</a>
            </li>
            <li>
              <a href="tel:+15037345502" class="info-link">(503) 734-5502</a>
            </li>
          </ul>
        </div>

        <div class="info-block">
          <h3 class="info-title">Response Time</h3>
          <p class="info-text">I typically respond within 24 hours. For urgent inquiries, call or text.</p>
        </div>

        <div class="info-block">
          <h3 class="info-title">Web3</h3>
          <ul class="info-list info-list--mono">
            <li>russabuss.eth</li>
            <li>russabuss.sol</li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .contact {
    background: var(--color-bg-primary, #0a0a0a);
    padding: var(--space-20, 5rem) var(--space-4, 1rem);
  }

  .contact-container {
    max-width: var(--container-xl, 1280px);
    margin: 0 auto;
  }

  .contact-header {
    text-align: center;
    margin-bottom: var(--space-12, 3rem);
  }

  .contact-title {
    font-family: var(--font-display, 'Space Grotesk', sans-serif);
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 700;
    color: var(--color-text-primary, #ffffff);
    margin: 0 0 var(--space-4, 1rem);
  }

  .contact-intro {
    font-family: var(--font-body, 'Inter', sans-serif);
    font-size: var(--font-size-lg, 1.125rem);
    color: var(--color-text-secondary, #a0a0a0);
    margin: 0;
    max-width: 650px;
    margin-left: auto;
    margin-right: auto;
    line-height: 1.6;
  }

  .contact-content {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-12, 3rem);
  }

  .contact-form-wrapper {
    background: var(--color-bg-secondary, #141414);
    border-radius: var(--radius-xl, 1rem);
    padding: var(--space-8, 2rem);
  }

  .contact-form {
    display: flex;
    flex-direction: column;
    gap: var(--space-6, 1.5rem);
  }

  .form-row {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-4, 1rem);
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: var(--space-2, 0.5rem);
  }

  .form-label {
    font-family: var(--font-body, 'Inter', sans-serif);
    font-size: var(--font-size-sm, 0.875rem);
    font-weight: 500;
    color: var(--color-text-primary, #ffffff);
  }

  .form-input,
  .form-textarea {
    font-family: var(--font-body, 'Inter', sans-serif);
    font-size: var(--font-size-base, 1rem);
    color: var(--color-text-primary, #ffffff);
    background: var(--color-bg-elevated, #1a1a1a);
    border: 1px solid var(--color-bg-slate, #1e1e1e);
    border-radius: var(--radius-md, 0.5rem);
    padding: var(--space-3, 0.75rem) var(--space-4, 1rem);
    transition: border-color var(--transition-fast, 150ms ease);
  }

  .form-input:focus,
  .form-textarea:focus {
    outline: none;
    border-color: var(--color-accent, #6366f1);
  }

  .form-textarea {
    resize: vertical;
    min-height: 120px;
  }

  .form-fieldset {
    border: none;
    padding: 0;
    margin: 0;
  }

  .form-legend {
    font-family: var(--font-body, 'Inter', sans-serif);
    font-size: var(--font-size-sm, 0.875rem);
    font-weight: 500;
    color: var(--color-text-primary, #ffffff);
    margin-bottom: var(--space-3, 0.75rem);
  }

  .checkbox-grid {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-3, 0.75rem);
  }

  .checkbox-label {
    display: flex;
    align-items: center;
    gap: var(--space-2, 0.5rem);
    cursor: pointer;
  }

  .checkbox-input {
    width: 18px;
    height: 18px;
    accent-color: var(--color-accent, #6366f1);
    cursor: pointer;
  }

  .checkbox-text {
    font-family: var(--font-body, 'Inter', sans-serif);
    font-size: var(--font-size-sm, 0.875rem);
    color: var(--color-text-secondary, #a0a0a0);
  }

  .form-submit {
    width: 100%;
    padding: var(--space-4, 1rem);
    font-family: var(--font-body, 'Inter', sans-serif);
    font-size: var(--font-size-base, 1rem);
    font-weight: 600;
    color: var(--color-text-primary, #ffffff);
    background: var(--color-accent, #6366f1);
    border: none;
    border-radius: var(--radius-md, 0.5rem);
    cursor: pointer;
    transition: all var(--transition-base, 250ms ease);
  }

  .form-submit:hover,
  .form-submit:focus {
    background: var(--color-accent-hover, #818cf8);
  }

  .form-submit:focus-visible {
    outline: 2px solid var(--color-accent, #6366f1);
    outline-offset: 2px;
  }

  .contact-info {
    display: flex;
    flex-direction: column;
    gap: var(--space-8, 2rem);
  }

  .info-block {
    padding: var(--space-6, 1.5rem);
    background: var(--color-bg-secondary, #141414);
    border-radius: var(--radius-lg, 0.75rem);
  }

  .info-title {
    font-family: var(--font-display, 'Space Grotesk', sans-serif);
    font-size: var(--font-size-lg, 1.125rem);
    font-weight: 600;
    color: var(--color-text-primary, #ffffff);
    margin: 0 0 var(--space-3, 0.75rem);
  }

  .info-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: var(--space-2, 0.5rem);
  }

  .info-list--mono {
    font-family: var(--font-mono, 'JetBrains Mono', monospace);
    font-size: var(--font-size-sm, 0.875rem);
    color: var(--color-text-secondary, #a0a0a0);
  }

  .info-link {
    font-family: var(--font-body, 'Inter', sans-serif);
    font-size: var(--font-size-base, 1rem);
    color: var(--color-text-primary, #ffffff);
    text-decoration: none;
    transition: color var(--transition-fast, 150ms ease);
  }

  .info-link:hover,
  .info-link:focus {
    color: var(--color-accent, #6366f1);
  }

  .info-text {
    font-family: var(--font-body, 'Inter', sans-serif);
    font-size: var(--font-size-sm, 0.875rem);
    color: var(--color-text-secondary, #a0a0a0);
    margin: 0;
    line-height: 1.6;
  }

  @media (min-width: 640px) {
    .form-row {
      grid-template-columns: 1fr 1fr;
    }
  }

  @media (min-width: 1024px) {
    .contact-content {
      grid-template-columns: 2fr 1fr;
    }
  }

  /* React ContactForm styles */
  .contact-form-wrapper :global(.contact-form) {
    display: flex;
    flex-direction: column;
    gap: var(--space-6, 1.5rem);
  }

  .contact-form-wrapper :global(.form-row) {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-4, 1rem);
  }

  .contact-form-wrapper :global(.form-group) {
    display: flex;
    flex-direction: column;
    gap: var(--space-2, 0.5rem);
  }

  .contact-form-wrapper :global(.form-label) {
    font-family: var(--font-body, 'Inter', sans-serif);
    font-size: var(--font-size-sm, 0.875rem);
    font-weight: 500;
    color: var(--color-text-primary, #ffffff);
  }

  .contact-form-wrapper :global(.form-input),
  .contact-form-wrapper :global(.form-textarea) {
    font-family: var(--font-body, 'Inter', sans-serif);
    font-size: var(--font-size-base, 1rem);
    color: var(--color-text-primary, #ffffff);
    background: var(--color-bg-elevated, #1a1a1a);
    border: 1px solid var(--color-bg-slate, #1e1e1e);
    border-radius: var(--radius-md, 0.5rem);
    padding: var(--space-3, 0.75rem) var(--space-4, 1rem);
    transition: border-color var(--transition-fast, 150ms ease);
  }

  .contact-form-wrapper :global(.form-input:focus),
  .contact-form-wrapper :global(.form-textarea:focus) {
    outline: none;
    border-color: var(--color-accent, #6366f1);
  }

  .contact-form-wrapper :global(.form-input--error),
  .contact-form-wrapper :global(.form-textarea--error) {
    border-color: #ef4444;
  }

  .contact-form-wrapper :global(.form-textarea) {
    resize: vertical;
    min-height: 120px;
  }

  .contact-form-wrapper :global(.form-error) {
    font-family: var(--font-body, 'Inter', sans-serif);
    font-size: var(--font-size-xs, 0.75rem);
    color: #ef4444;
  }

  .contact-form-wrapper :global(.form-fieldset) {
    border: none;
    padding: 0;
    margin: 0;
  }

  .contact-form-wrapper :global(.form-legend) {
    font-family: var(--font-body, 'Inter', sans-serif);
    font-size: var(--font-size-sm, 0.875rem);
    font-weight: 500;
    color: var(--color-text-primary, #ffffff);
    margin-bottom: var(--space-3, 0.75rem);
  }

  .contact-form-wrapper :global(.checkbox-grid) {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-3, 0.75rem);
  }

  .contact-form-wrapper :global(.checkbox-label) {
    display: flex;
    align-items: center;
    gap: var(--space-2, 0.5rem);
    cursor: pointer;
  }

  .contact-form-wrapper :global(.checkbox-input) {
    width: 18px;
    height: 18px;
    accent-color: var(--color-accent, #6366f1);
    cursor: pointer;
  }

  .contact-form-wrapper :global(.checkbox-text) {
    font-family: var(--font-body, 'Inter', sans-serif);
    font-size: var(--font-size-sm, 0.875rem);
    color: var(--color-text-secondary, #a0a0a0);
  }

  .contact-form-wrapper :global(.form-alert) {
    font-family: var(--font-body, 'Inter', sans-serif);
    font-size: var(--font-size-sm, 0.875rem);
    padding: var(--space-3, 0.75rem) var(--space-4, 1rem);
    border-radius: var(--radius-md, 0.5rem);
  }

  .contact-form-wrapper :global(.form-alert--error) {
    background: rgba(239, 68, 68, 0.1);
    color: #ef4444;
    border: 1px solid rgba(239, 68, 68, 0.3);
  }

  .contact-form-wrapper :global(.form-submit) {
    width: 100%;
    padding: var(--space-4, 1rem);
    font-family: var(--font-body, 'Inter', sans-serif);
    font-size: var(--font-size-base, 1rem);
    font-weight: 600;
    color: var(--color-text-primary, #ffffff);
    background: var(--color-accent, #6366f1);
    border: none;
    border-radius: var(--radius-md, 0.5rem);
    cursor: pointer;
    transition: all var(--transition-base, 250ms ease);
  }

  .contact-form-wrapper :global(.form-submit:hover),
  .contact-form-wrapper :global(.form-submit:focus) {
    background: var(--color-accent-hover, #818cf8);
  }

  .contact-form-wrapper :global(.form-submit:disabled) {
    opacity: 0.6;
    cursor: not-allowed;
  }

  .contact-form-wrapper :global(.form-submit:focus-visible) {
    outline: 2px solid var(--color-accent, #6366f1);
    outline-offset: 2px;
  }

  .contact-form-wrapper :global(.form-success) {
    text-align: center;
    padding: var(--space-8, 2rem);
  }

  .contact-form-wrapper :global(.success-icon) {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 64px;
    height: 64px;
    margin: 0 auto var(--space-6, 1.5rem);
    background: var(--color-accent, #6366f1);
    color: var(--color-text-primary, #ffffff);
    font-size: 2rem;
    border-radius: var(--radius-full, 9999px);
  }

  .contact-form-wrapper :global(.success-title) {
    font-family: var(--font-display, 'Space Grotesk', sans-serif);
    font-size: var(--font-size-2xl, 1.5rem);
    font-weight: 600;
    color: var(--color-text-primary, #ffffff);
    margin: 0 0 var(--space-3, 0.75rem);
  }

  .contact-form-wrapper :global(.success-text) {
    font-family: var(--font-body, 'Inter', sans-serif);
    font-size: var(--font-size-base, 1rem);
    color: var(--color-text-secondary, #a0a0a0);
    margin: 0 0 var(--space-6, 1.5rem);
  }

  .contact-form-wrapper :global(.success-button) {
    display: inline-flex;
    padding: var(--space-3, 0.75rem) var(--space-6, 1.5rem);
    font-family: var(--font-body, 'Inter', sans-serif);
    font-size: var(--font-size-sm, 0.875rem);
    font-weight: 500;
    color: var(--color-text-primary, #ffffff);
    background: var(--color-bg-elevated, #1a1a1a);
    border: 1px solid var(--color-bg-slate, #1e1e1e);
    border-radius: var(--radius-md, 0.5rem);
    cursor: pointer;
    transition: all var(--transition-base, 250ms ease);
  }

  .contact-form-wrapper :global(.success-button:hover),
  .contact-form-wrapper :global(.success-button:focus) {
    border-color: var(--color-accent, #6366f1);
  }

  @media (min-width: 640px) {
    .contact-form-wrapper :global(.form-row) {
      grid-template-columns: 1fr 1fr;
    }
  }
</style>
